{
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(cargo:*)",
      "Bash(just:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(mise:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(rg:*)",
      "Bash(sd:*)",
      "WebSearch",
      "WebFetch(domain:github.com)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "printf '\\033[01;32m%s@%s\\033[00m:\\033[01;34m%s\\033[00m' \"$(whoami)\" \"$(hostname -s)\" \"$(pwd)\""
  },
  "enabledPlugins": {},
  "alwaysThinkingEnabled": true
}
