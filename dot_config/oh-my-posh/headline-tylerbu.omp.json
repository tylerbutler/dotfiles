{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "git-branch": "cyan",
    "git-status": "lightMagenta",
    "host": "yellow",
    "joint": "darkGray",
    "path": "blue",
    "user": "magenta"
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:user",
          "properties": {
            "ssh_icon": "",
            "prefix": "",
            "postfix": "",
            "template": "<p:user><b>{{.UserName}}</b></><p:joint> @ </><p:host><b>{{.ComputerName}}</b></><p:joint>: </>"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path",
          "properties": {
            "prefix": "",
            "postfix": "",
            "style": "full"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-branch",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false,
            "template": "{{.HEAD}}",
            "prefix": "",
            "postfix": "",
            "branch_icon": ""
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-status",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": false,
            "template": "{{if (or (.Working.Changed) (.Staging.Changed) (gt .Ahead 0) (gt .Behind 0) (gt .StashCount 0))}}<p:joint> [</>{{$staged := add .Staging.Added .Staging.Modified .Staging.Deleted .Staging.Unmerged}}{{$working := add .Working.Modified .Working.Deleted .Working.Unmerged}}{{$unstaged := .Working.Added}}{{if gt .Behind 0}}{{.Behind}}↓{{end}}{{if gt .Ahead 0}}{{.Ahead}}↑{{end}}{{if .Staging.Changed}}{{$staged}}+{{end}}{{if .Working.Changed}}{{$working}}!{{end}}{{if gt $unstaged 0}}{{$unstaged}}?{{end}}{{if (gt .StashCount 0)}}{{.StashCount}}*{{end}}<p:joint>]</>{{end}}",
            "prefix": "",
            "postfix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
