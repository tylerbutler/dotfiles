{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "git-branch": "cyan",
    "git-status": "lightMagenta",
    "host": "yellow",
    "joint": "darkGray",
    "path": "blue",
    "user": "magenta"
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "<p:user>{{repeat (len .User) \"_\"}}</><p:joint>___</><p:host>{{repeat (len .Host) \"_\"}}</><p:joint>__</><p:path>{{repeat (len .Path) \"_\"}}</>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false,
            "template": "{{$ahead := (ternary (.Ahead | toString | len) 0 (eq .Ahead 0))}}{{$behind := (ternary (.Behind | toString | len) 0 (eq .Behind 0))}}{{$sum := (add $ahead 1 $behind 1) | int }}<p:git-branch>{{repeat (len .HEAD) \"_\"}}</><p:joint>__</><p:git-status>{{repeat $sum \"_\"}}</><p:joint>_</>",
            "prefix": "",
            "postfix": "",
            "branch_icon": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:user",
          "properties": {
            "ssh_icon": "",
            "prefix": "",
            "postfix": "",
            "template": "<p:user><b>{{.UserName}}</b></><p:joint> @ </><p:host><b>{{.ComputerName}}</b></><p:joint>: </>"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path",
          "properties": {
            "prefix": "",
            "postfix": "",
            "style": "full"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-branch",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false,
            "template": "{{.HEAD}}",
            "prefix": "",
            "postfix": " ",
            "branch_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:joint",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "["
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-status",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": false,
            "template": "{{if gt .Behind 0}}{{.Behind}}↓{{end}}{{if gt .Ahead 0}}{{.Ahead}}↑{{end}}{{if .Staging.Changed}}{{add .Staging.Added .Staging.Modified .Staging.Deleted .Staging.Unmerged}}+{{end}}{{if .Working.Changed}}{{add .Working.Modified .Working.Deleted .Working.Unmerged}}!{{end}}{{if gt .Working.Added 0}}{{.Working.Added}}?{{end}}{{if (gt .StashCount 0)}}{{.StashCount}}*{{end}}",
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:joint",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "]"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
