{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "git-branch": "cyan",
    "git-status": "lightMagenta",
    "host": "yellow",
    "joint": "darkGray",
    "path": "blue",
    "user": "magenta"
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "<p:user>{{repeat (len .User) \"_\"}}</><p:joint>___</><p:host>{{repeat (len .Host) \"_\"}}</><p:joint>__</><p:path>{{repeat (len .Path) \"_\"}}</>"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true,
            "template": "{{$stagedCount := add .Staging.Added .Staging.Modified .Staging.Deleted .Staging.Unmerged}}{{$staged := (ternary 0 (add 1 ($stagedCount | toString | len)) (eq $stagedCount 0))}}{{$workingCount := add .Working.Modified .Working.Deleted .Working.Unmerged}}{{$working := (ternary 0 (add 1 ($workingCount | toString | len)) (eq $workingCount 0))}}{{$unstaged := (ternary 0 (add 1 (.Working.Added | toString | len)) (eq .Working.Added 0))}}{{$stash := (ternary 0 (add 1 (.StashCount | toString | len)) (eq .StashCount 0))}}{{$ahead := (ternary 0 (add 1 (.Ahead | toString | len)) (eq .Ahead 0))}}{{$behind := (ternary 0 (add 1 (.Behind | toString | len)) (eq .Behind 0))}}{{$sum := add $ahead $behind $staged $working $unstaged $stash}}<p:git-branch>{{repeat (len .HEAD) \"_\"}}</>{{if (ne $sum 0)}}<p:joint>__</><p:git-status>{{repeat (int $sum) \"_\"}}</><p:joint>_</>{{end}}",
            "prefix": " ",
            "postfix": "",
            "branch_icon": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "p:user",
          "properties": {
            "ssh_icon": "",
            "prefix": "",
            "postfix": "",
            "template": "<p:user><b>{{.UserName}}</b></><p:joint> @ </><p:host><b>{{.ComputerName}}</b></><p:joint>: </>"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path",
          "properties": {
            "prefix": "",
            "postfix": "",
            "style": "full"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-branch",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": false,
            "template": "{{.HEAD}}",
            "prefix": "",
            "postfix": "",
            "branch_icon": ""
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:git-status",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": false,
            "template": "{{if (or (.Working.Changed) (.Staging.Changed) (gt .Ahead 0) (gt .Behind 0) (gt .StashCount 0))}}<p:joint> [</>{{$staged := add .Staging.Added .Staging.Modified .Staging.Deleted .Staging.Unmerged}}{{$working := add .Working.Modified .Working.Deleted .Working.Unmerged}}{{$unstaged := .Working.Added}}{{if gt .Behind 0}}{{.Behind}}↓{{end}}{{if gt .Ahead 0}}{{.Ahead}}↑{{end}}{{if .Staging.Changed}}{{$staged}}+{{end}}{{if .Working.Changed}}{{$working}}!{{end}}{{if gt $unstaged 0}}{{$unstaged}}?{{end}}{{if (gt .StashCount 0)}}{{.StashCount}}*{{end}}<p:joint>]</>{{end}}",
            "prefix": "",
            "postfix": ""
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
