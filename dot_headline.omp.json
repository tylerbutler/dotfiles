{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "blocks": [
    {
      "type": "rprompt",
      "alignment": "right",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "lightMagenta",
          "properties": {
            "display_user": true,
            "display_host": false,
            "ssh_icon": "(ssh) ",
            "prefix": ""
          }
        },
        {
          "type": "text",
          "style": "diamond",
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "@"
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "yellow",
          "properties": {
            "display_user": false,
            "display_host": true,
            "ssh_icon": ""
          }
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "white",
          "properties": {
            "wsl_separator": "-"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#61AFEF",
          "properties": {
            "prefix": " \uE5FF ",
            "style": "full"
          }
        }
      ]
    }
  ]
}
