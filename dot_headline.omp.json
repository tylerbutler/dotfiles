{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "git-foreground": "#193549",
    "git": "#FFFB38",
    "git-modified": "#FF9248",
    "git-diverged": "#FF4500",
    "git-ahead": "#B388FF",
    "git-behind": "#B388FF"
  },
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "vertical_offset": -1,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "magenta",
          "properties": {
            "display_user": true,
            "display_host": false,
            "ssh_icon": "(ssh) ",
            "prefix": "",
            "postfix": "",
            "template": "<b>{{.UserName}}</b>"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": " @ "
          }
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "yellow",
          "properties": {
            "template": "<b>{{.ComputerName}}</b>",
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "darkGray",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": ": "
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "blue",
          "properties": {
            "prefix": "<b>",
            "postfix": "</b>",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "properties": {
            "fetch_status": true,
            "fetch_stash_count": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "default",
          "properties": {
            "prefix": "",
            "postfix": "",
            "text": "$"
          }
        }
      ]
    }
  ]
}
