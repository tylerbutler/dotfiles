{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "right",
      "type": "prompt",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "exit",
          "style": "powerline",
          "foreground": "black",
          "background": "lightRed",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "properties": {
            "display_exit_code": true,
            "color_foreground": true,
            "always_enabled": false,
            "prefix": "\uE3BF "
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "foreground": "black",
          "background": "cyan",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "properties": {
            "threshold": 500,
            "style": "austin",
            "prefix": "<black>\ufbab </>"
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "foreground": "white",
          "background": "#026e00",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "",
          "properties": {
            "prefix": " \uE617 ",
            "npm_icon": " "
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "white",
          "background": "#026e00",
          "properties": {
            "prefix": " \uE235 "
          }
        },
        {
          "type": "go",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "black",
          "background": "#7FD5EA",
          "properties": {
            "prefix": " \uF1A0 "
          }
        },
        {
          "type": "spotify",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "black",
          "background": "#1BD760",
          "properties": {
            "prefix": "\uF9C6 ",
            "playing_icon": "\uE602 ",
            "paused_icon": "\uF8E3 ",
            "stopped_icon": "\uF04D ",
            "track_separator": " - "
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\uE0B2",
          "invert_powerline": true,
          "foreground": "black",
          "background": "white",
          "leading_diamond": "<white>\uE0C5</>",
          "trailing_diamond": "<white>\uE0C4</>",
          "properties": {
            "time_format": "3:04:05 PM",
            "prefix": "\ufa1a "
          }
        }
      ]
    },
    {
      "alignment": "left",
      "type": "prompt",
      "vertical_offset": 0,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "powerline_symbol": "",
          "foreground": "#26C6DA",
          "background": "#546E7A",
          "invert_powerline": true,
          "properties": {
            "postfix": " ",
            "wsl_separator": "-"
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "blue",
          "foreground": "black",
          "properties": {
            "default_user_name": "tylerbu",
            "display_user": false,
            "template": "{{ if .SSHSession}}\uF6FF {{.ComputerName}}{{ else if ne .ComputerName \"tylerbu-desktop\" }}{{.ComputerName}}{{end}}"
          }
        },
        {
          "type": "shell",
          "style": "powerline",
          "powerline_symbol": "",
          "foreground": "black",
          "background": "magenta",
          "properties": {
            "prefix": " \uFCB5 "
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "background": "lightCyan",
          "foreground": "black",
          "powerline_symbol": "",
          "properties": {
            "folder_icon": "",
            "folder_separator_icon": "  ",
            "home_icon": "",
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "background": "lightYellow",
          "foreground": "black",
          "powerline_symbol": "",
          "properties": {
            "display_status": true,
            "branch_icon": "  ",
            "display_stash_count": true,
            "display_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "newline"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "vertical_offset": 1,
      "segments": [
        {
          "type": "root",
          "style": "powerline",
          "background": "default",
          "foreground": "yellow",
          "properties": {
            "root_icon": "\uF0E7"
          }
        },
        {
          "type": "text",
          "style": "powerline",
          "foreground": "default",
          "background": "default",
          "properties": {
            "text": " \u276F"
          }
        }
      ]
    }
  ],
  "final_space": true
}
