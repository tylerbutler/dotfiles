# Check for plugin and zgenom updates every 7 days
# This does not increase the startup time.
zgenom autoupdate

# if the init script doesn't exist
if ! zgenom saved; then
    echo "Creating a zgenom save"

    # Add this if you experience issues with missing completions or errors mentioning compdef.
    # zgenom compdef

    # ========================================
    # OMZ PLUGINS (Minimal Selection)
    # All other aliases now in ~/.aliae.yaml
    # ========================================

    # Fast git completion
    zgenom ohmyzsh plugins/gitfast

    # Alias suggestions (shows shorter aliases for commands)
    zgenom ohmyzsh plugins/alias-finder

    # Random quotes on terminal start
    zgenom ohmyzsh plugins/rand-quote

    # ========================================
    # NON-OMZ PLUGINS
    # ========================================

    zgenom load lukechilds/zsh-better-npm-completion
    zgenom load MenkeTechnologies/zsh-cargo-completion
    zgenom load mollifier/cd-gitroot
    # zgenom load unixorn/git-extra-commands  # 163 extra git commands - commented out (unused)
    zgenom load zsh-users/zsh-syntax-highlighting

    # extra completions
    zgenom load zsh-users/zsh-completions
    zgenom load 3v1n0/zsh-bash-completions-fallback

    # Modern ls wrapper (uses eza/lsd/exa if available)
    # NOTE: This overrides l/la/ll/lt aliases from .aliae.yaml
    zgenom load zpm-zsh/ls

    # zgenom load wfxr/emoji-cli  # Emoji picker via Alt+M - commented out (fuzzy-emoji not installed)

    # zgenom bin tj/git-extras  # 74 extra git commands - commented out (unused)

    # save all to init script
    zgenom save

    # Compile your zsh files
    zgenom compile "$HOME/.zshrc"
fi
